{
  "name": "@avalix/chroma",
  "type": "module",
  "version": "0.0.9",
  "description": "End-to-end testing library for Polkadot wallet interactions",
  "author": "Avalix Labs",
  "license": "MIT",
  "homepage": "https://github.com/avalix-labs/chroma#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avalix-labs/chroma.git",
    "directory": "packages/chroma"
  },
  "bugs": {
    "url": "https://github.com/avalix-labs/chroma/issues"
  },
  "keywords": [
    "polkadot",
    "wallet",
    "testing",
    "e2e",
    "playwright",
    "automation",
    "blockchain"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "chroma": "./scripts/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint --fix .",
    "prepublishOnly": "npm run build",
    "download-extensions": "rm -rf .chroma && tsx scripts/download-extensions.ts",
    "test": "playwright test --project=wallet-setup --project=tests",
    "test:simple": "playwright test --project=simple",
    "test:ui": "playwright test --ui",
    "test:setup": "playwright test --project=wallet-setup"
  },
  "peerDependencies": {
    "@playwright/test": "^1.55.0"
  },
  "dependencies": {
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.3",
    "@types/unzipper": "^0.10.10",
    "eslint": "^9.35.0",
    "tsdown": "latest",
    "tsx": "^4.20.6"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@avalix/chroma",
  "type": "module",
  "version": "0.0.14",
  "description": "End-to-end testing library for Polkadot wallet interactions",
  "author": "Avalix Labs",
  "license": "MIT",
  "homepage": "https://chroma-docs.up.railway.app/docs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avalix-labs/chroma.git",
    "directory": "packages/chroma"
  },
  "bugs": {
    "url": "https://github.com/avalix-labs/chroma/issues"
  },
  "keywords": [
    "polkadot",
    "wallet",
    "testing",
    "e2e",
    "playwright",
    "automation",
    "blockchain"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "chroma": "./scripts/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint --fix .",
    "prepublishOnly": "npm run build",
    "download-extensions": "rm -rf .chroma && tsx scripts/download-extensions.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "@playwright/test": "^1.57.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.5.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.2",
    "@types/unzipper": "^0.10.11",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.39.1",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
